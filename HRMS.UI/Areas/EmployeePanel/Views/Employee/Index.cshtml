    @{
        ViewData["Title"] = "Employee Panel";
        Layout = "~/Areas/EmployeePanel/Views/Shared/_EmployeeLayout.cshtml";
        string baseUrl = ViewBag.BaseUrl;

    }


    <div class="card">
	    <div class="card-header bg-transparent ml-0 py-0">
		    <div class="row">
			    <div class="col-6">
				    <h6 class="pt-2 mb-0">
					    Employee In Out
				    </h6>
			    </div>
		    </div>
	    </div>

	    <div class="card-body">

            <div class="row mb-3">
                <div class="col-md-2"></div>
                <div class="col-md-4">
                    <div class="form-group position-relative">
                        <select id="dropdownmonth" class="form-control floating-input">
                            <option value="" selected disabled>Select Month</option>
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                        <label class="floating-label" for="dropdownmonth">Month</label>
                        <span id="spnBranch" style="color:red; display:none;">Please Select Month</span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group position-relative">
                        <select id="dropdownyear" class="form-control floating-input">
                            <option value="" selected disabled>Select Year</option>
                            <option value="1">2005</option>
                            <option value="2">2006</option>
                            <option value="3">2007</option>
                            <option value="4">2008</option>
                            <option value="5">2009</option>
                            <option value="6">2010</option>
                            <option value="7">2011</option>
                            <option value="8">2012</option>
                            <option value="9">2013</option>
                            <option value="10">2014</option>
                            <option value="11">2015</option>
                            <option value="12">2016</option>
                            <option value="13">2017</option>
                            <option value="14">2018</option>
                            <option value="15">2019</option>
                            <option value="16">2020</option>
                            <option value="17">2021</option>
                            <option value="18">2022</option>
                            <option value="19">2023</option>
                            <option value="20">2024</option>
                            <option value="21">2025</option>
                            <option value="22">2026</option>
                            <option value="23">2027</option>
                        </select>
                        <label class="floating-label" for="dropdownyear">Year</label>
                        <span id="spnBranch" style="color:red; display:none;">Please Select Year</span>
                    </div>
                </div>

                <div class="col-md-2">
                    <button type="button" class="btn btn-primary px-4" id="btnGo" style="background-color:#2395c6; color:white;">Go</button>

                </div>
            </div>

         <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-tabs" id="attendanceTabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="firstLast-tab" data-toggle="tab" href="#firstLast" role="tab">First In and Last Out</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="multiplePunches-tab" data-toggle="tab" href="#multiplePunches" role="tab">Multiple Punches</a>
                    </li>
                </ul>
                <h6 class="text-center text-uppercase fw-bold mb-3 mt-3" style="letter-spacing: 1px;">
                    EMPLOYEE IN/OUT LIST
                </h6>
                <div class="row mb-3 align-items-center">
                    <div class="col-auto">
                        <label class="fw-bold">Manual Inout :</label>
                    </div>
                    <div class="col-auto">
                        <button id="btnIn" class="btn btn-primary me-2">In</button>
                        <button id="btnOut" class="btn btn-primary">Out</button>
                    </div>
                </div>


                <div class="tab-content mt-3">
                    <div class="tab-pane fade show active" id="firstLast" role="tabpanel">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped" id="tblFirstLast">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Date</th>
                                        <th>In Time</th>
                                        <th>Out Time</th>
                                        <th>Duration</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Data will be loaded dynamically -->
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="multiplePunches" role="tabpanel">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped" id="tblMultiplePunches">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Date</th>
                                        <th>In Time</th>
                                        <th>Out Time</th>
                                        <th>Duration</th>
                                        <th>Worked Duration</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Data will be loaded dynamically -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
         </div>


		</div>

    </div>

