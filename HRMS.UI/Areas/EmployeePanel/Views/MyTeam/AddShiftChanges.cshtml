@{
    ViewData["Title"] = "Investment Declaration";
    Layout = "~/Areas/EmployeePanel/Views/Shared/_EmployeeLayout.cshtml";
    string baseUrl = ViewBag.BaseUrl;
}

<link href="~/commoncss.css" rel="stylesheet" />

<style>
    .fixed-label {
        min-width: 180px;
        white-space: nowrap;
        margin-bottom: 0;
        text-align: right;
    }

</style>

<div class="card">
    <!-- Sub-heading and Add Button -->
    <div class="card mb-4">
        <div class="card-header bg-transparent">
            <div class="row align-items-center">
                <div class="col">
                    <h6 class="mb-0">Add Employee Shift</h6>
                </div>
                <div class="col-auto">
                    <a href="@Url.Action("ShiftChanges", "MyTeam", new { area = "EmployeePanel" })" class="btn btn-primary">Back</a>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form>
            <div class="col-md-8 mx-auto">

                <div class="row mb-3">
                    <!-- For Date -->
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <label for="fordateid" class="fixed-label me-2">For Date<span class="text-danger">*</span>:</label>
                            <input type="date" class="form-control form-control-sm" id="fordateid" />
                        </div>
                    </div>

                    <!-- Employee Name -->
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <label for="employeid" class="fixed-label me-2">Employee Name:</label>
                            <select class="form-control form-control-sm" id="employeid">
                                <option value="0">--Select Employee--</option>
                            </select>
                        </div>
                    </div>
                </div>


          

                <!-- GO and Clear Buttons -->
                <div class="row mb-3 justify-content-center">
                    <div class="col-md-6 text-center">
                        <button type="button" class="btn btn-primary btn-sm me-2">GO</button>
                        <button type="button" class="btn btn-secondary btn-sm">Clear</button>
                    </div>
                </div>

                <!-- Radio Buttons -->
                <div class="row mb-3 justify-content-center">
                    <div class="col-md-4 d-flex justify-content-center gap-4">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Status" id="crrentid">
                            <label class="form-check-label" for="crrentid">Current Shift</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Status" id="Allid">
                            <label class="form-check-label" for="Allid">All Entry</label>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>