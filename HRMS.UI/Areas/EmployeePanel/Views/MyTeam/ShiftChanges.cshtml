@{
    ViewData["Title"] = "Investment Declaration";
    Layout = "~/Areas/EmployeePanel/Views/Shared/_EmployeeLayout.cshtml";
    string baseUrl = ViewBag.BaseUrl;
}
<link href="~/commoncss.css" rel="stylesheet" />

<style>
    .fixed-label {
        min-width: 180px;
        white-space: nowrap;
        margin-bottom: 0;
        text-align: right;
    }

 </style>

<div class="card">
    <div class="card-header bg-transparent py-2">
        <div class="row">
            <div class="col-6">
                <h4 class="mb-0">Shift Changes Details</h4>
            </div>
        </div>
    </div>

    <div class="card">
        <!-- Sub-heading and Add Button -->
        <div class="card mb-4">
            <div class="card-header bg-transparent">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="mb-0">Search Panel</h6>
                    </div>
                    <div class="col-auto">
                        <a href="@Url.Action("AddShiftChanges", "MyTeam", new { area = "EmployeePanel" })" class="btn btn-primary">Add</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form>
                <div class="col-md-8 mx-auto">

                    <!-- Search Type and Search For -->
                    <div class="row mb-3">
                        <div class="col-md-6 d-flex align-items-center">
                            <label for="searchtypeid" class="fixed-label">Search Type:</label>
                            <select class="form-control form-control-sm" id="searchtypeid">
                                <option value="0">Employee Name</option>
                                <option value="1">Employee Code</option>
                            </select>
                        </div>
                        <div class="col-md-6 d-flex align-items-center">
                            <label for="searchforid" class="fixed-label">Search For:</label>
                            <input type="text" class="form-control form-control-sm" id="searchforid" />
                        </div>
                    </div>

                    <!-- GO and Clear Buttons -->
                    <div class="row mb-3 justify-content-center">
                        <div class="col-md-6 text-center">
                            <button type="button" class="btn btn-primary btn-sm me-2">GO</button>
                            <button type="button" class="btn btn-secondary btn-sm">Clear</button>
                        </div>
                    </div>

                    <!-- Radio Buttons -->
                    <div class="row mb-3 justify-content-center">
                        <div class="col-md-4 d-flex justify-content-center gap-4">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="Status" id="crrentid">
                                <label class="form-check-label" for="crrentid">Current Shift</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="Status" id="Allid">
                                <label class="form-check-label" for="Allid">All Entry</label>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- Toolbar with Show All and Delete Buttons -->
        <div class="row mb-3">
            <div class="col text-end me-4">
                <button type="button" class="btn btn-primary btn-sm me-2">Show All</button>
                <button type="button" class="btn btn-danger btn-sm">Delete</button>
            </div>
        </div>

        <!-- Data Grid -->
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-sm text-center" id="shiftGrid">
                <thead class="table-light">
                    <tr>
                        <th>Select</th>
                        <th>Employee Name</th>
                        <th>Employee Code</th>
                        <th>Shift Name</th>
                        <th>Shift Type</th>
                        <th>For Date</th>
                    </tr>
                </thead>
                
            </table>
        </div>
    </div>
</div>

