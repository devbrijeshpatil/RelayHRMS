@{
    ViewData["Title"] = "Employee Panel";
    Layout = "~/Areas/EmployeePanel/Views/Shared/_EmployeeLayout.cshtml";
    string baseUrl = ViewBag.BaseUrl;
}
<link href="~/commoncss.css" rel="stylesheet" />

<style>
    .fixed-label {
        min-width: 120px;
        white-space: nowrap;
        margin-bottom: 0;
        margin-right: 10px;
        text-align: right;
    }
</style>


<div class="card">
    <div class="card-header bg-transparent ml-0 py-0">
        <div class="card">
            <div class="card-header bg-transparent">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="pt-2 mb-0">Change Request Approval</h6>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <h6 class="mb-4">Search Panel</h6>
                <form>
                    <div class="col-md-8 mx-auto">

                        <div class="row mb-2">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="requesttypeid" class="fixed-label">Request Type:</label>
                                <select class="form-control form-control-sm" id="requesttypeid">
                                    <option value="0">-- Select--</option>

                                </select>
                            </div>
                           
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="sdateid" class="fixed-label">Start Date:</label>
                                <input type="date" class="form-control form-control-sm" id="sdateid">
                            </div>
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="Edateid" class="fixed-label">End Date:</label>
                                <input type="date" class="form-control form-control-sm" id="Edateid">
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-6 d-flex align-items-center">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="leaveStatus" id="regularid">
                                    <label class="form-check-label" for="regularid">Regular</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="leaveStatus" id="Previousmonthid">
                                    <label class="form-check-label" for="Previousmonthid">Previous Month</label>
                                </div>
                            </div>
                            <div class="col-md-6 d-flex align-items-center">
                                <label class="fixed-label"></label>
                                <div>
                                    <button type="button" class="btn btn-primary btn-sm me-2">GO</button>
                                    <button type="button" class="btn btn-secondary btn-sm">Clear</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </form>
            </div>



        </div>
    </div>
</div>
