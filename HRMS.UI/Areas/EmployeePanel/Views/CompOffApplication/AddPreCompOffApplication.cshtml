@{
    ViewData["Title"] = "Employee Panel";
    Layout = "~/Areas/EmployeePanel/Views/Shared/_EmployeeLayout.cshtml";
    string baseUrl = ViewBag.BaseUrl;
}
<link href="~/commoncss.css" rel="stylesheet" />

<style>
    .fixed-label {
        min-width: 130px;
        white-space: nowrap;
        margin-bottom: 0;
        text-align: right;
    }

    .form-container {
        max-width: 800px;
        margin: 0 auto;
    }
</style>

<div class="card">
    <div class="card-header bg-transparent ml-0 py-0">
        <div class="row">
            <div class="col-6">
                <h4 class="pt-2 mb-0">Pre Comp-Off Application</h4>
            </div>
        </div>
        <div class="card mt-0">
            <div class="card-header bg-transparent py-2">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="mb-0">
                            Add Pre Comp-Off Application
                        </h6>
                    </div>
                    <div class="col-auto">
                        <a href='@Url.Action("PreCompOffApplication", "CompOffApplication", new { area = "EmployeePanel" })' class="btn btn-primary btn-sm">Back</a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="form-container">
                    <form>
                        <div class="row mb-3 align-items-start">
                            <!-- Application Date -->
                            <label for="applicationDate" class="col-sm-4 col-form-label fixed-label">
                                Application Date<span class="text-danger">*</span>:
                            </label>
                            <div class="col-sm-4">
                                <input type="date" class="form-control form-control-sm" id="applicationDate" name="applicationDate" placeholder="DD-MM-YYYY">
                            </div>

                            
                        </div>


                       

                        <div class="row">
                            <!-- Left form fields -->
                            <div class="col-sm-8">
                                <!-- Employee Name -->
                                <div class="row mb-3">
                                    <label for="employeeid" class="col-sm-6 col-form-label fixed-label">Employee Name<span class="text-danger">*</span>:</label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control form-control-sm" id="employeeid">
                                    </div>
                                </div>

                                <!-- Manager -->
                                <div class="row mb-3">
                                    <label for="repoid" class="col-sm-6 col-form-label fixed-label">Manager<span class="text-danger">*</span>:</label>
                                    <div class="col-sm-6">
                                        <select class="form-control form-control-sm" id="repoid">
                                            <option value="0">Select</option>
                                        </select>
                                    </div>
                                </div>

                                <!-- From Date -->
                                <div class="row mb-3">
                                    <label for="fromdateid" class="col-sm-6 col-form-label fixed-label">From<span class="text-danger">*</span>:</label>
                                    <div class="col-sm-6">
                                        <input type="date" class="form-control form-control-sm" id="fromdateid" placeholder="DD-MM-YYYY">
                                    </div>
                                </div>

                                <!-- Period -->
                                <div class="row mb-3">
                                    <label for="extraworkhrid" class="col-sm-6 col-form-label fixed-label">Period<span class="text-danger">*</span>:</label>
                                    <div class="col-sm-6">
                                        <input type="number" class="form-control form-control-sm" id="extraworkhrid">
                                    </div>
                                </div>
                            </div>

                            <!-- Right scrollable box -->
                            <div class="col-sm-4">
                                <strong>Week-Off / Holiday List</strong>
                                <div style="max-height: 150px; overflow-y: auto; border: 1px solid #ccc; padding: 8px; border-radius: 5px;">
                                    <ul class="mb-0 ps-3">
                                        <li>02-Jun-2025</li>
                                        <li>08-Jun-2025</li>
                                        <li>09-Jun-2025</li>
                                        <li>15-Jun-2025</li>
                                        <li>16-Jun-2025</li>
                                        <li>22-Jun-2025</li>
                                        <li>23-Jun-2025</li>
                                        <li>30-Jun-2025</li>
                                        <li>06-Jul-2025</li>
                                        <li>13-Jul-2025</li>
                                        <li>20-Jul-2025</li>
                                        <li>27-Jul-2025</li>
                                        <!-- More dates if needed -->
                                    </ul>
                                </div>

                            </div>
                        </div>
                       
                        <div class="row mb-3">
                            <label for="todateid" class="col-sm-4 col-form-label fixed-label">To Date:</label>
                            <div class="col-sm-4">
                                <input type="date" class="form-control form-control-sm" id="todateid" placeholder="DD-MM-YYYY">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="Remarksid" class="col-sm-4 col-form-label fixed-label">Remarks:</label>
                            <div class="col-sm-4">
                                <textarea type="text" class="form-control form-control-sm" id="Remarksid"> </textarea>
                            </div>
                        </div>
                        =
                        <div class="row mb-3">
                            <div class="col-sm-4"></div>
                            <div class="col-sm-4">
                                <button type="submit" class="btn btn-primary btn-sm me-2">Submit</button>
                                <button type="reset" class="btn btn-secondary btn-sm">Clear</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
