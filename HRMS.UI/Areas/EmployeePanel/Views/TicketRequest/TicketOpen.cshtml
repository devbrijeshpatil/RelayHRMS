@{
    ViewData["Title"] = "Employee Panel";
    Layout = "~/Areas/EmployeePanel/Views/Shared/_EmployeeLayout.cshtml";
    string baseUrl = ViewBag.BaseUrl;
}

<link href="~/commoncss.css" rel="stylesheet" />

<style>
    .fixed-label {
        min-width: 160px;
        white-space: nowrap;
        margin-bottom: 0;
        text-align: right;
    }
</style>

<div class="card">
    <div class="card-header bg-transparent ml-0 py-0">
        <div class="row">
            <div class="col-6">
                <h4 class="pt-2 mb-0">
                    Ticket Open
                </h4>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-transparent">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="mb-0">Search Panel</h6>
                    </div>
                    <div class="col-auto">
                        <a href="@Url.Action("AddTicket", "TicketRequest", new { area = "EmployeePanel" })" class="btn btn-primary">Add</a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="col-md-8 mx-auto">
                            <div class="row mb-2">
                                <div class="col-md-6 d-flex align-items-center">
                                    <label for="ticketid" class="fixed-label">Ticket Type:</label>
                                    <select class="form-control form-control-sm" id="ticketid">
                                        <option value="0">-- Select--</option>
                                    </select>
                                </div>
                                <div class="col-md-6 d-flex align-items-center">
                                    <label for="searchforid" class="fixed-label">Search For:</label>
                                    <input type="text" class="form-control form-control-sm" id="searchforid" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6 d-flex align-items-center">
                                    <label class="fixed-label"></label>
                                    <div>
                                        <button type="button" class="btn btn-primary btn-sm me-2">GO</button>
                                        <button type="button" class="btn btn-secondary btn-sm">Clear</button>
                                    </div>
                                </div>
                            </div>

                            <!-- GRID START -->
                           
                            <!-- GRID END -->

                        </div>
                    </div>
                </form>
                <div class="row mb-2">
                    <div class="col text-end">
                        <button type="button" class="btn btn-danger btn-sm">Delete</button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-sm">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Ticket ID</th>
                                        <th>Emp Code</th>
                                        <th>Emp Name</th>
                                        <th>Ticket Date</th>
                                        <th>Ticket Type</th>
                                        <th>Issued To</th>
                                        <th>Priority</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Table data rows will go here -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
