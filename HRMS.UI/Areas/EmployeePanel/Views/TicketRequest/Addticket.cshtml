@{
    ViewData["Title"] = "Employee Panel";
    Layout = "~/Areas/EmployeePanel/Views/Shared/_EmployeeLayout.cshtml";
    string baseUrl = ViewBag.BaseUrl;
}
<link href="~/commoncss.css" rel="stylesheet" />

<style>
    .fixed-label {
        min-width: 130px;
        white-space: nowrap;
        margin-bottom: 0;
        text-align: right;
    }

    .form-container {
        max-width: 800px;
        margin: 0 auto;
    }
</style>

<div class="card mt-4">
    <div class="card-header bg-transparent py-2">
        <div class="row align-items-center">
            <div class="col">
                <h4 class="mb-0">Ticket Open</h4>
            </div>
            <div class="col-auto">
                <a href='@Url.Action("TicketOpen", "TicketRequest", new { area = "EmployeePanel" })' class="btn btn-primary btn-sm">Back</a>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="form-container">
            <form>
                <div class="row mb-3">
                    <label for="generatedateid" class="col-sm-4 col-form-label fixed-label">
                        Ticket Generate Date<span class="text-danger">*</span>:
                    </label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control form-control-sm" id="generatedateid" readonly />
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="Employeeid" class="col-sm-4 col-form-label fixed-label">
                        Employee<span class="text-danger">*</span>:
                    </label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control form-control-sm" id="Employeeid" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="Assignid" class="col-sm-4 col-form-label fixed-label">
                        Ticket Assign<span class="text-danger">*</span>:
                    </label>
                    <div class="col-sm-4">
                        <select class="form-control form-control-sm" id="Assignid">
                            <option value="0">-- Select --</option>
                            <option value="1">Account</option>
                            <option value="2">HR</option>
                            <option value="3">IT</option>
                            <option value="4">Travel Help Desk</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="Tikettypeid" class="col-sm-4 col-form-label fixed-label">
                        Ticket Type<span class="text-danger">*</span>:
                    </label>
                    <div class="col-sm-4">
                        <select class="form-control form-control-sm" id="Tikettypeid">
                            <option value="0">-- Select Ticket Type --</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="descriptionid" class="col-sm-4 col-form-label fixed-label">
                        Ticket Description:
                    </label>
                    <div class="col-sm-4">
                        <textarea class="form-control form-control-sm" id="descriptionid" rows="3"></textarea>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="priorityid" class="col-sm-4 col-form-label fixed-label">
                        Ticket Priority<span class="text-danger">*</span>:
                    </label>
                    <div class="col-sm-4">
                        <select class="form-control form-control-sm" id="priorityid">
                            <option value="0">-- Select --</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="documentid" class="col-sm-4 col-form-label fixed-label">
                        Attach Document:
                    </label>
                    <div class="col-sm-4">
                        <input type="file" class="form-control form-control-sm" id="documentid" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-4">
                        <button type="submit" class="btn btn-primary btn-sm me-2">Submit</button>
                        <button type="reset" class="btn btn-secondary btn-sm">Clear</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
