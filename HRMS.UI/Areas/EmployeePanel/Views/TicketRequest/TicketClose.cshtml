@{
    ViewData["Title"] = "Employee Panel";
    Layout = "~/Areas/EmployeePanel/Views/Shared/_EmployeeLayout.cshtml";
    string baseUrl = ViewBag.BaseUrl;
}
<link href="~/commoncss.css" rel="stylesheet" />

<style>
    .fixed-label {
        min-width: 180px;
        white-space: nowrap;
        margin-bottom: 0;
        text-align: right;
    }
</style>

<div class="card">
    <div class="card-header bg-transparent py-0">
        <div class="card">
            <div class="card-header bg-transparent">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="pt-2 mb-0">Ticket Close</h6>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <h6 class="mb-4">Search Panel</h6>
                <form>
                    <div class="col-md-8 mx-auto">
                        <div class="row mb-3 justify-content-center">
                            <!-- Center: Employee Type Radios -->
                            <div class="col-md-6 d-flex justify-content-center gap-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="emp" id="empid">
                                    <label class="form-check-label" for="empid">Employee</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="emp" id="candidateid">
                                    <label class="form-check-label" for="candidateid">Candidate</label>
                                </div>
                            </div>

                            </div>
                        <div class="row mb-3">
                            <!-- Left: Search Type -->
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="searchtypeid" class="fixed-label">Search Type:</label>
                                <select class="form-control form-control-sm" id="searchtypeid">
                                    <option value="0">-- Select --</option>
                                </select>
                            </div>

                            <!-- Right: Search For -->
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="searchforid" class="fixed-label">Search For:</label>
                                <input type="text" class="form-control form-control-sm" id="searchforid" />
                            </div>
                        </div>

                        <!-- Employee Code/Name -->
                        <div class="row mb-3">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="employeecodeid" class="fixed-label">Employee Code/Name:</label>
                                <input type="text" class="form-control form-control-sm" id="employeecodeid" />
                            </div>
                        </div>

                        <!-- Status Radio Buttons -->
                        <div class="row mb-3 justify-content-center">
                            <div class="col-md-4 d-flex justify-content-center gap-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Status" id="openid">
                                    <label class="form-check-label" for="openid">Open</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Status" id="holdid">
                                    <label class="form-check-label" for="holdid">On Hold</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Status" id="closedid">
                                    <label class="form-check-label" for="closedid">Closed</label>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row mb-3 justify-content-center">
                            <div class="col-md-6 text-center">
                                <button type="button" class="btn btn-primary btn-sm me-2">GO</button>
                                <button type="button" class="btn btn-secondary btn-sm">Clear</button>
                            </div>
                        </div>

                    </div>
                </form>
                <div class="row mb-2">
                    <div class="col text-end">
                        <button type="button" class="btn btn-danger btn-sm">Delete</button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-sm">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Ticket ID</th>
                                        <th>Emp Code</th>
                                        <th>Emp Name</th>
                                        <th>Ticket Date</th>
                                        <th>Ticket Type</th>
                                        <th>Issued To</th>
                                        <th>Priority</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Table data rows will go here -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
