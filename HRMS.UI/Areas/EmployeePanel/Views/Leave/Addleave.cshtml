@{
    ViewData["Title"] = "Employee Panel";
    Layout = "~/Areas/EmployeePanel/Views/Shared/_EmployeeLayout.cshtml";
    string baseUrl = ViewBag.BaseUrl;
}

<div class="card">
    <div class="card-header bg-transparent ml-0 py-0">
        <div class="row">
            <div class="col-6">
                <h4 class="pt-2 mb-0">Leave</h4>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-transparent">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="mb-0">Search Panel</h6>
                    </div>
                    <div class="col-auto">
                        <a href='@Url.Action("LeaveApplication", "Leave", new { area = "EmployeePanel" })' class="btn btn-primary">Back</a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <form>
                            <div class="mb-3 row">
                                <label for="applicationDate" class="col-sm-5 col-form-label">Application Date:</label>
                                <div class="col-sm-7">
                                    <input type="text" class="form-control" id="applicationDate" name="applicationDate" placeholder="DD-MM-YYYY" readonly>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="employedid" class="col-sm-5 col-form-label">Employee:</label>
                                <div class="col-sm-7">
                                    <input type="text" class="form-control" id="employedid">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="repoid" class="col-sm-5 col-form-label">Reporting Person:</label>
                                <div class="col-sm-7">
                                    <input type="text" class="form-control" id="repoid">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="Leavetypeid" class="col-sm-5 col-form-label">Leave:</label>
                                <div class="col-sm-7">
                                    <select class="form-control" id="Leavetypeid">
                                        <option value="0">-- Select Leave Type --</option>
                                        <option value="1">Causal Leave</option>
                                        <option value="2">Comp-Off Leave</option>
                                        <option value="3">LWP</option>
                                        <option value="4">Privileing Leave</option>
                                    </select>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label class="col-sm-5 col-form-label">Application Type:</label>
                                <div class="col-sm-7">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="leaveStatus" id="regularid">
                                        <label class="form-check-label" for="regularid">Regular</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="leaveStatus" id="Previousmonthid">
                                        <label class="form-check-label" for="Previousmonthid">Previous Month</label>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="formdateid" class="col-sm-5 col-form-label">Form Date:</label>
                                <div class="col-sm-7">
                                    <input type="text" class="form-control" id="formdateid">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="todateid" class="col-sm-5 col-form-label">To Date:</label>
                                <div class="col-sm-7">
                                    <input type="text" class="form-control" id="todateid">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="nodaysid" class="col-sm-5 col-form-label">No. of Days:</label>
                                <div class="col-sm-7">
                                    <input type="text" class="form-control" id="nodaysid">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="leaveid" class="col-sm-5 col-form-label">Leave Type:</label>
                                <div class="col-sm-7">
                                    <input type="text" class="form-control" id="leaveid">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="resonid" class="col-sm-5 col-form-label">Reason:</label>
                                <div class="col-sm-7">
                                    <textarea class="form-control" id="resonid" rows="3" placeholder="Enter reason here..."></textarea>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="responsibleid" class="col-sm-5 col-form-label">Responsible:</label>
                                <div class="col-sm-7">
                                    <select class="form-control" id="responsibleid">
                                        <option value="">-- Select Employee --</option>
                                    </select>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="weekid" class="col-sm-5 col-form-label">Cancel Weekoff and Holiday:</label>
                                <div class="col-sm-7">
                                    <select class="form-control" id="weekid">
                                        <option value="">-- Select --</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mt-4">
                                <div class="col-md-8 offset-md-4 d-flex justify-content-end">
                                    <button type="button" class="btn btn-primary me-2" id="submitid">Submit</button>
                                    <button type="button" class="btn btn-secondary" id="clearbuttonid">Clear</button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">Leave Balance</h6>
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Leave Type</th>
                                            <th>Balance</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>

                                </table>
                                <p class="text-muted mt-3" style="font-size: 0.9rem;">
                                    <strong>Note:</strong> Considering Weekoff and Holiday as leave depends on policy/approval.
                                </p>




                            </div>
                        </div>

                        <div class="mt-3">
                          
                            <ul>
                                <li><a href="#leavedetails" id="leaveDetailsLink" data-id="1">Leave Deatils</a></li>

                            </ul>

                        </div>

                        

                    </div>
                
            </div>

        </div>
 </div>

           