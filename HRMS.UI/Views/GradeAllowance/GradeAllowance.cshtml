@{
    ViewData["Title"] = "Employee Increment";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
    string baseUrl = Configuration["BaseUrlSettings:baseUrl"];
}

<div class="card">
    <div class="card-header bg-transparent ml-0 py-0">

        <div class="card">
            <div class="card-header bg-transparent">
                <div class="row align-items-center">
                    <div class="col">
                        <h5 class="pt-2 mb-0">
                            GRADE WISE ALLOWANCE
                        </h5>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <form>
                    <div class="col-md-10 mx-auto">
                        <div class="row mb-3 align-items-center">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="branchid" class="me-2 mb-0" style="width: 100px;">Branch:</label>
                                <select class="form-control" id="branchid">
                                    <option value="0">--Select--</option>
                                    <option value="1">GKP</option>
                                    <option value="2">Head Office</option>
                                    <option value="3">UP</option>
                                </select>
                            </div>

                        </div>

                        <div class="row mb-3 align-items-center">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="gradeid" class="me-2 mb-0" style="width: 100px;">Grade:</label>
                                <select class="form-control" id="gradeid">
                                    <option value="0">--All Grade--</option>
                                    <option value="1">--MANAGEMENT--</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3 align-items-center">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="allowancesid" class="me-2 mb-0" style="width: 100px;">Allowances:</label>
                                <select class="form-control" id="allowancesid">
                                    <option value="0">--Select Allowances--</option>
                                </select>
                            </div>
                            <div class="col-md-6 d-flex align-items-center">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="checkboxid">
                                    <label class="form-check-label" for="checkboxid">Exists In Employee</label>
                                </div>
                            </div>

                        </div>

                        <div class="row mb-3 align-items-center">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="activeid" class="me-2 mb-0" style="width: 100px;">Employee Status:</label>
                                <select class="form-control" id="activeid">
                                    <option value="0">--Active--</option>
                                    <option value="1">--Left--</option>
                                </select>
                            </div>



                        </div>
                    </div>

                    <button type="button" id="" class="btn btn-primary">GO</button>
                </form>
            </div>

           
        </div>
    </div>
</div>
