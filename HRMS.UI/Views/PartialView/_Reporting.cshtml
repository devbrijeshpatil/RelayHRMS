<div class="card-header bg-primary text-white ">
    <h6>Reporting Manager</h6>
</div>

<div id="displaySection">
    <div class="card-body px-4">
        <div class="row">
            <div class="col-md-12 mb-3">
                <h6><b>Reporting Manager Details:</b></h6>
            </div>
        </div>

        <div class="row px-5">
            <!-- Effect Date -->
            <div class="col-md-6 mb-2">
                <strong>Effect Date:</strong>
                <span id="effectDateDisplay" class="ms-2">01/04/2025</span>
            </div>

            <!-- Reporting Manager -->
            <div class="col-md-6 mb-2">
                <strong>Reporting Manager:</strong>
                <span id="reportingManagerDisplay" class="ms-2">John Doe</span>
            </div>
        </div>

        <div class="row px-5">
            <!-- Method -->
            <div class="col-md-6 mb-2">
                <strong>Method:</strong>
                <span id="methodDisplay" class="ms-2">CONTRACT</span>
            </div>

            <!-- Project -->
            <div class="col-md-6 mb-2">
                <strong>Project:</strong>
                <span id="projectDisplay" class="ms-2">Project Alpha</span>
            </div>
        </div>

        <div class="row px-5">
            <!-- Start Date -->
            <div class="col-md-6 mb-2">
                <strong>Start Date:</strong>
                <span id="startDateDisplay" class="ms-2">01/01/2025</span>
            </div>

            <!-- End Date -->
            <div class="col-md-6 mb-2">
                <strong>End Date:</strong>
                <span id="endDateDisplay" class="ms-2">01/12/2025</span>
            </div>
        </div>

        <div class="row px-5">
            <!-- Comments -->
            <div class="col-md-12 mb-2">
                <strong>Comments:</strong>
                <span id="commentsDisplay" class="ms-2">Renew Reminder For Contract Renew/Finished</span>
            </div>
        </div>

        <div class="row mt-3 px-5">
            <div class="col-md-4"></div>
            <div class="col-md-4 text-center">
                <button type="button" class="btn btn-primary px-5" id="btnUpdateReporting" style="background-color:#2395c6; color:white;">Update</button>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</div>

<div id="editReporting" style="display: none;">
    <div class="card-body px-4">
        <form id="reportingForm">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <h6><b>Edit Reporting Manager Details:</b></h6>
                </div>
            </div>

            <div class="row px-5">
                <!-- Effect Date -->
                <div class="col-md-4 mb-2">
                    <div class="form-group mt-3 position-relative">
                        <input type="date" id="effectDateEdit" class="form-control floating-input" />
                        <label class="floating-label" for="effectDateEdit">Effect Date*</label>
                        <span id="spnEffectDate" style="color:red; display:none;">Please Enter Effect Date</span>
                    </div>
                </div>

                <!-- Reporting Manager -->
                <div class="col-md-4 mb-2">
                    <div class="form-group mt-3 position-relative">
                        <select id="reportingManagerEdit" class="form-control floating-input">
                            <option value="John Doe">John Doe</option>
                            <option value="Jane Smith">Jane Smith</option>
                        </select>
                        <label class="floating-label" for="reportingManagerEdit">Reporting Manager*</label>
                        <span id="spnReportingManager" style="color:red; display:none;">Please Select Reporting Manager</span>
                    </div>
                </div>

                <!-- Method -->
                <div class="col-md-4 mb-2">
                    <div class="form-group mt-3 position-relative">
                        <input type="text" id="methodEdit" class="form-control floating-input" />
                        <label class="floating-label" for="methodEdit">Method</label>
                        <span id="spnMethod" style="color:red; display:none;">Please Enter Method</span>
                    </div>
                </div>
            </div>

            <div class="row px-5">
                <!-- Project -->
                <div class="col-md-4 mb-2">
                    <div class="form-group mt-3 position-relative">
                        <select id="projectEdit" class="form-control floating-input">
                            <option value="Project Alpha">Project Alpha</option>
                            <option value="Project Beta">Project Beta</option>
                        </select>
                        <label class="floating-label" for="projectEdit">Project*</label>
                        <span id="spnProject" style="color:red; display:none;">Please Select Project</span>
                    </div>
                </div>

                <!-- Start Date -->
                <div class="col-md-4 mb-2">
                    <div class="form-group mt-3 position-relative">
                        <input type="date" id="startDateEdit" class="form-control floating-input" />
                        <label class="floating-label" for="startDateEdit">Start Date*</label>
                        <span id="spnStartDate" style="color:red; display:none;">Please Enter Start Date</span>
                    </div>
                </div>

                <!-- End Date -->
                <div class="col-md-4 mb-2">
                    <div class="form-group mt-3 position-relative">
                        <input type="date" id="endDateEdit" class="form-control floating-input" />
                        <label class="floating-label" for="endDateEdit">End Date*</label>
                        <span id="spnEndDate" style="color:red; display:none;">Please Enter End Date</span>
                    </div>
                </div>
            </div>

            <div class="row px-5">
                <!-- Comments -->
                <div class="col-md-4 mb-2">
                    <div class="form-group mt-3 position-relative">
                        <textarea id="commentsEdit" class="form-control floating-input" rows="3"></textarea>
                        <label class="floating-label" for="commentsEdit">Comments</label>
                        <span id="spnComments" style="color:red; display:none;">Please Enter Comments</span>
                    </div>
                </div>
            </div>

            <hr />
            <div class="row mt-3" id="btnSection">
                <div class="col-md-3"></div>
                <div class="col-md-6 text-center">
                    <button type="button" class="btn btn-dark px-5" id="btnBackReporting">Back</button>
                    <button type="reset" class="btn btn-secondary px-5" id="btnClear">Clear</button>
                    <button type="button" class="btn btn-primary px-5" id="btnSaveReporting" style="background-color:#2395c6; color:white;">Save</button>
                </div>
                <div class="col-md-3"></div>
            </div>
        </form>
    </div>
</div>

<script>
     $("#btnBackReporting").click(() => {
        $("#displaySection").show();
        $("#editReporting").hide();
    });
    $("#btnUpdateReporting").click(() => {
        $("#displaySection").hide();
        $("#editReporting").show();
    })

</script>