
@{
    ViewData["Title"] = "Employee Increment";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
    string baseUrl = Configuration["BaseUrlSettings:baseUrl"];
}



<div class="card">
    <div class="card-header bg-transparent ml-0 py-0">
        <div class="row">
            <div class="col-6">
                <h5 class="pt-2 mb-0">
                    Employee Increment Application
                </h5>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-transparent">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="mb-0">Search Panel</h6>
                    </div>
                    <div class="col-auto">
                        <a href='@Url.Action("AddEmployeeIncrement", "EmployeeIncrement")' class="btn btn-primary">Add</a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <form>
                    <div class="col-md-10 mx-auto">

                        <!-- Row 1: Search By + Search For -->
                        <div class="row mb-3 align-items-center">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="Leavetypeid" class="me-2 mb-0" style="width: 100px;">Search By:</label>
                                <select class="form-control" id="Leavetypeid">
                                    <option value="">Grade Name</option>
                                </select>
                            </div>

                            <div class="col-md-6 d-flex align-items-center">
                                <label for="input1" class="me-2 mb-0" style="width: 100px;">Search For:</label>
                                <input type="text" class="form-control" id="input1">
                            </div>
                        </div>

                        <!-- Row 2: From Date + To Date -->
                        <div class="row mb-3 align-items-center">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="fromDate" class="me-2 mb-0" style="width: 100px;">From Date:</label>
                                <input type="date" class="form-control" id="fromDate">
                            </div>

                            <div class="col-md-6 d-flex align-items-center">
                                <label for="todate" class="me-2 mb-0" style="width: 100px;">To Date:</label>
                                <input type="date" class="form-control" id="todate">
                            </div>
                        </div>

                        <!-- Row 3: By Branch + Reason -->
                        <div class="row mb-3 align-items-center">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="branchid" class="me-2 mb-0" style="width: 100px;">By Branch:</label>
                                <select class="form-control" id="branchid">
                                    <option value="0">-- Select--</option>
                                    <option value="1">GKP</option>
                                    <option value="2">Head Office</option>
                                    <option value="3">UP</option>
                                </select>
                            </div>

                            <div class="col-md-6 d-flex align-items-center">
                                <label for="reasonid" class="me-2 mb-0" style="width: 100px;">Reason:</label>
                                <select class="form-control" id="reasonid">
                                    <option value="0">-- Select--</option>
                                    <option value="1">Add Other Allowance</option>
                                    <option value="2">Department Change</option>
                                    <option value="3">Designation Change</option>
                                    <option value="4">Increment</option>
                                    <option value="5">Internal Transfer</option>
                                    <option value="6">New Joining</option>
                                    <option value="7">PF Calculation</option>
                                    <option value="8">PF Calculation</option>
                                    <option value="9">Probation To Confirmation</option>
                                    <option value="10">Promotion</option>
                                    <option value="11">Revised Salary Structure</option>
                                </select>
                            </div>
                        </div>

                        <!-- Row 4: Status Radio Buttons -->
                        <div class="mb-3 d-flex align-items-center">
                            <label class="me-3 mb-0" style="width: 100px;">Status:</label>

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="leaveStatus" id="pendingleaveid">
                                <label class="form-check-label" for="pendingleaveid">Pending</label>
                            </div>

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="leaveStatus" id="Approveid">
                                <label class="form-check-label" for="Approveid">Approved</label>
                            </div>

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="leaveStatus" id="Rejectedid">
                                <label class="form-check-label" for="Rejectedid">Rejected</label>
                            </div>

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="leaveStatus" id="processid">
                                <label class="form-check-label" for="processid">In Process</label>
                            </div>
                        </div>

                        <!-- Row 5: Buttons -->
                        <div class="d-flex justify-content-center gap-3 mt-3">
                            <button type="button" class="btn btn-primary" id="gobutoonid">GO</button>
                            <button type="button" class="btn btn-secondary" id="clearbuttonid">Clear</button>
                        </div>

                    </div>
                </form>

            </div>
        </div>

    </div>

</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


