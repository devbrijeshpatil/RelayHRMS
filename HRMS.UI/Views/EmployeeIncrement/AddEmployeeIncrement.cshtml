@{
    ViewData["Title"] = "Employee Increment";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
    string baseUrl = Configuration["BaseUrlSettings:baseUrl"];
}

<div class="card">
    <div class="card-header bg-transparent ml-0 py-0">
        
            <div class="card">
                <div class="card-header bg-transparent">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="pt-2 mb-0">
                                Add Employee Increment/Decrement Application
                            </h5>
                        </div>
                     </div>
                </div>

                <div class="card-body">
                <form>
                    <div class="col-md-10 mx-auto">
                        <div class="row mb-3 align-items-center">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="fromDate" class="me-2 mb-0" style="width: 100px;">Date:</label>
                                <input type="date" class="form-control" id="fromDate">
                            </div>

                            <div class="col-md-6 d-flex align-items-center">
                                <label for="todate" class="me-2 mb-0" style="width: 100px;">Effect Date:</label>
                                <input type="date" class="form-control" id="todate">
                            </div>
                        </div>

                        <div class="row mb-3 align-items-center">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="selecttypeid" class="me-2 mb-0" style="width: 100px;">Select Type:</label>
                                <select class="form-control" id="selecttypeid">
                                    <option value="1">Revise Profile</option>
                                </select>
                            </div>

                            <div class="col-md-6 d-flex align-items-center">
                                <label for="branchid" class="me-2 mb-0" style="width: 100px;">Branch:</label>
                                <select class="form-control" id="branchid">
                                    <option value="0">--Select--</option>
                                    <option value="1">GKP</option>
                                    <option value="2">Head Office</option>
                                    <option value="3">UP</option>
                                </select>
                            </div>

                        </div>

                        <div class="row mb-3 align-items-center">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="employeeid" class="me-2 mb-0" style="width: 100px;">Employee:</label>
                                <select class="form-control" id="employeeid">
                                    <option value="0">--Select Employee--</option>
                                </select>
                            </div>

                            <div class="col-md-6 d-flex align-items-center">
                                <label for="resonid" class="me-2 mb-0" style="width: 100px;">Reason:</label>
                                <select class="form-control" id="resonid">
                                    <option value="0">--Select--</option>
                                </select>
                            </div>

                        </div>
                    </div>
                </form>
                </div>

            <div class="card-header bg-transparent">
                <div class="row align-items-center">
                   
                    <div class="col-auto">
                        <a href='@Url.Action("EmployeeIncrementApplication", "EmployeeIncrement")' class="btn btn-primary">Back</a>
                    </div>
                </div>
            </div>

            </div>
     </div>
</div>


