@{
	ViewData["Title"] = "WeekOff Master";
	Layout = "~/Views/Shared/_mainLayout.cshtml";
	string baseUrl = Configuration["BaseUrlSettings:baseUrl"];
}


<div class="card ">
    <div class="card-header bg-transparent mb-2 ml-0  py-0">
		<div class="row">
			<div class="col-6">
				<h6 class="pt-2 mb-2">
					WeekOff Master
				</h6>
			</div>

		</div>
	</div>

        <div class="card-body">
            <form id="weekOffForm">
                <!-- Branch Dropdown -->
                <div class="row mb-3">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                            <div class="form-group position-relative">
                                <select id="dropdownBranch" class="form-control floating-input">
                                    <option value="" selected disabled>Select Branch</option>
                                </select>
                                <label class="floating-label" for="dropdownBranch">Branch Name</label>
                                <span id="spnBranch" style="color:red; display:none;">Please Select Branch</span>
                            </div>
                    </div>
                    <div class="col-md-2">
                    <button type="button" class="btn btn-primary px-4" id="btnGo" style="background-color:#2395c6; color:white;">Go</button>

                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">

                        <!-- Week Off Table -->
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Weekoff Name</th>
                                        <th>Weekoff Day</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Generate 7 rows for each day -->
                                    <tr>
                                        <td>Sunday</td>
                                        <td><input type="number" class="form-control" value="0.9" step="0.1" min="0" max="1"></td>
                                    </tr>
                                    <tr>
                                        <td>Monday</td>
                                        <td><input type="number" class="form-control" value="1.0" step="0.1" min="0" max="1"></td>
                                    </tr>
                                    <tr>
                                        <td>Tuesday</td>
                                        <td><input type="number" class="form-control" value="1.0" step="0.1" min="0" max="1"></td>
                                    </tr>
                                    <tr>
                                        <td>Wednesday</td>
                                        <td><input type="number" class="form-control" value="1.0" step="0.1" min="0" max="1"></td>
                                    </tr>
                                    <tr>
                                        <td>Thursday</td>
                                        <td><input type="number" class="form-control" value="1.0" step="0.1" min="0" max="1"></td>
                                    </tr>
                                    <tr>
                                        <td>Friday</td>
                                        <td><input type="number" class="form-control" value="1.0" step="0.1" min="0" max="1"></td>
                                    </tr>
                                    <tr>
                                        <td>Saturday</td>
                                        <td><input type="number" class="form-control" value="1.0" step="0.1" min="0" max="1"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                </div>


            </div><div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <button type="button" class="btn btn-primary ms-3 px-5" id="btnSaveWeekOff" style="background-color:#2395c6; color:white;">Save</button>
                    <button type="reset" class="btn btn-secondary ms-3 px-5">Clear</button>
                </div>
                <div class="col-md-4"></div>
            </div>


                
            </form>
        </div>
    
</div>