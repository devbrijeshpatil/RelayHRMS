       $(document).ready(function() {
			$('#btnLogin').click(function() {
				 var email=$('#inputEmailAddress').val();
				  var password=$('#inputChoosePassword').val()
				var formData = {
					 Email: email,
					 Password: password
				};
				$.ajax({
					 url: '@UIBaseUrl/AuthManage/Login',
					type: 'POST',
					contentType: 'application/json',
					data: JSON.stringify(formData),
					success: function(response) {
						if(response.isSuccess)
						{
							 var tokenResponse=response.data;
						 round_success_noti(response.responseMessage);
							  // Redirect after a delay to ensure the toaster is visible
							setTimeout(function() {

								 if(tokenResponse.email=="admin@demo.com")
								 {
								  window.location.href = '@UIBaseUrl/Home/index';

								 }
								 else{
								   window.location.href = '@UIBaseUrl/EmployeePanel/Home/index';
								 }
							}, 1500); // Delay in milliseconds (e.g., 200ms = 1.5 seconds)
						}
						 else{
							   round_error_noti(response.responseMessage);
						 }
					},
					error: function(xhr, status, error) {
						
						console.error('There was an error!', error);
					}
				});
			});
		});

	</script>
