@{
	ViewData["Title"] = "Import Data";
	Layout = "~/Views/Shared/_mainLayout.cshtml";
	string baseUrl = Configuration["BaseUrlSettings:baseUrl"];
}

<div id="allowanceFormContainer">
    <div class="row">
        <div class="col-md-6">
            <!-- Left Side Inputs -->
            <div class="form-group mb-2">
                <label>Month <span style="color:red">*</span> :</label>
                <select class="form-control form-control-sm" id="ddlMonth"></select>
            </div>
            <div class="form-group mb-2">
                <label>Grade :</label>
                <select class="form-control form-control-sm" id="ddlGrade"></select>
            </div>
            <div class="form-group mb-2">
                <label>Department :</label>
                <select class="form-control form-control-sm" id="ddlDepartment"></select>
            </div>
            <div class="form-group mb-2">
                <label>Employee :</label>
                <select class="form-control form-control-sm" id="ddlEmployee"></select>
            </div>
        </div>

        <div class="col-md-6">
            <!-- Right Side Inputs -->
            <div class="form-group mb-2">
                <label>Year <span style="color:red">*</span> :</label>
                <select class="form-control form-control-sm" id="ddlYear"></select>
            </div>
            <div class="form-group mb-2">
                <label>Branch :</label>
                <select class="form-control form-control-sm" id="ddlBranch"></select>
            </div>
            <div class="form-group mb-2">
                <label>Designation :</label>
                <select class="form-control form-control-sm" id="ddlDesignation"></select>
            </div>
            <div class="form-group mb-2">
                <label>Allowance <span style="color:red">*</span> :</label>
                <select class="form-control form-control-sm" id="ddlAllowance"></select>
            </div>
        </div>
    </div>

    <!-- Buttons -->
    <div class="text-center mt-3">
        <button class="btn btn-primary me-2" id="btnGo">Go</button>
        <button class="btn btn-secondary" id="btnBack">Back</button>
    </div>
</div>
<script>
        $('#btnBack').click(function () {
        history.back(); // Previous page pe wapas le jata hai
    });
</script>