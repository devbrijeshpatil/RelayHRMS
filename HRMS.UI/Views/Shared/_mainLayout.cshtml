        });

          // AJAX request to fetch company data
            $.ajax({
                url: '@baseUrlLayout/CompanyDetailsAPI/GetAllCompanyDetailsList',
                method: 'GET',
                success: function(data) {
                    if(data.isSuccess){
                        var dropdown = $('#companyDropdown');
                        dropdown.empty();
                        debugger
                        dropdown.append('<option disabled value="">Select Company</option>');
                        $.each(data.data, function(index, company) {
                            dropdown.append($('<option>', {
                                value: company.companyId,
                                text: company.companyName
                            }));
                        });
                         // Select the first option by default
                        if (dropdown.find('option').length > 1) {
                            dropdown.val(dropdown.find('option:not(:disabled):first').val());
                        }
                        
                    }
                },
                error: function(error) {
                    console.error('Error fetching company data:', error);
                }
            });
